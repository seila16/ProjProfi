@model AgendamentoProjeto.Models.Laboratorio
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Index";
    if (HttpContextAccessor.HttpContext.Session.GetString("Cargo") == "T.I")
    {
        Layout = "_Layout";
    }
    else
    {
        Layout = "_LayoutCoordenador";
    }
}

@if (ViewBag.error != null)
{
    <div class="alert alert-danger mt-2" style="height:45px;">
        <p><strong>@ViewBag.error</strong></p>
    </div>
}

<h4 class="mt-4 text-primary">Atualizar Laboratório</h4>
<hr />
<div class="row">
    <div class="col-md-3">

    </div>
    <div class="border border-primary rounded bg-light pt-xl-5 pb-xl-5 col-md-5 ml-3" style="padding-left:100px;padding-right:100px;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LaboratorioId" />
            <div class="form-group">
                <label asp-for="NomeLaboratorio" class="control-label"></label>
                <input asp-for="NomeLaboratorio" class="form-control" />
                <span asp-validation-for="NomeLaboratorio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hardware" class="control-label"></label>
                <input asp-for="Hardware" class="form-control" />
                <span asp-validation-for="Hardware" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Software" class="control-label"></label>
                <input asp-for="Software" class="form-control" />
                <span asp-validation-for="Software" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuantidadePcs" class="control-label"></label>
                <input asp-for="QuantidadePcs" class="form-control" />
                <span asp-validation-for="QuantidadePcs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Projetor" /> @Html.DisplayNameFor(model => model.Projetor)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn ml-2 btn-info text-white">Voltar</a>
            </div>
        </form>
    </div>
    <div class="col-md-3">

    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
