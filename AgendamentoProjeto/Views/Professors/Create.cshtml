@model AgendamentoProjeto.Models.Professor

@{
    ViewData["Title"] = "Create";
}

@if (ViewBag.TemCargo == true)
{
    <div class="alert alert-danger mt-2" style="height:45px;">
        <p><strong>Já existe um professor com o nome inserido!</strong></p>
    </div>
}

<h4 class="mt-4 text-primary">Adicionar Professor</h4>
<hr />

<div class="row ">
    <div class="mt-3">
        <form asp-action="Create" class="formCenter border border-primary rounded bg-light pt-xl-5 pb-xl-5" style="padding-left:100px;padding-right:100px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeProfessor" class="control-label font-weight-bold text-primary"></label>
                <input asp-for="NomeProfessor" class="form-control" />
                <span asp-validation-for="NomeProfessor" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <input type="submit" value="Registrar" class="btn btn-success text-white" />
                <a asp-action="Index" class="btn ml-2 btn-info text-white">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


