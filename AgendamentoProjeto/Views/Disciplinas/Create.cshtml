@model AgendamentoProjeto.Models.Disciplina

@{
    ViewData["Title"] = "Create";
}
<link href="~/css/disciplina.css" rel="stylesheet" />

@if(ViewBag.TemDisciplina == true)
{
<div class="alert alert-danger">
    <p><strong>Já existe uma disciplina com o nome inserido!</strong></p>
</div>
}
<h1 align="center">Adicionar Disciplinas</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeDisciplina" class="control-label"></label>
                <input asp-for="NomeDisciplina" class="form-control" />
                <span asp-validation-for="NomeDisciplina" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <input type="submit" value="Criar" style="background-color:darkblue" class="btn text-white" />
                <a asp-action="Index" style="background-color:dodgerblue;" class="btn ml-2 text-white">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
