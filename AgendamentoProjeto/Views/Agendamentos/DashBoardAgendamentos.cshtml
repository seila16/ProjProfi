
@{
    ViewData["Title"] = "DashBoardAgendamentos";
}

    <div style=" display: flex;justify-content: center;" class="mt-3">
        <h3 class="text-primary">Agendamentos de hoje</h3>
    </div>


<div class="container mt-5">
    @foreach (var ag in ViewBag.agendamentos)
    {
    <div class="row row-striped">
        <div class="col-2 text-right">
            <h1 class="display-4"><span class="badge badge-primary">@ag.DataAgendamento.Day</span></h1>
            <h2 class="mr-2">@ag.DataAgendamento.ToString("MMM").ToUpper()</h2>
        </div>
        <div class="col-10">
            <h4 class="text-primary ml-3"><strong>Professor: @ag.Professor.NomeProfessor</strong></h4>
            <ul class="list-inline">
                <li class="list-inline-item"><i class="fa fa-calendar " aria-hidden="true"></i> @ag.DataAgendamento.ToString("dddd")</li>
                <li class="list-inline-item"><i class="fa fa-clock" aria-hidden="true"></i> @ag.DataAgendamento.ToShortTimeString()</li>
                <li class="list-inline-item"><i class="fa fa-location-arrow" aria-hidden="true"></i> Cafe</li>
            </ul>
        </div>
    </div>
    <hr class="bg-primary"/>
    }
</div>

