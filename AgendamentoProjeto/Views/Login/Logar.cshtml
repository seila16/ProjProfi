@model AgendamentoProjeto.Models.Usuario
@{
    ViewData["Title"] = "Logar";
    Layout = "_LayoutLogin";
}


<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/login.css"/>
<body id="backColor">
    @if (TempData["msgSucesso"] != null)
    {
        <div class="alert alert-info alert-dismissable mt-3">
            <strong>@TempData["msgSucesso"]</strong>
        </div>
    }



    <div id="divLogin" class="rounded shadow-lg mt-5">
        <form asp-action="Logar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class=" p-4">
                <label asp-for="Login" class="control-label text-center"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="p-4">
                <label asp-for="Senha" class="text-center"></label>
                <input type="password" asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="p-4">
                <label asp-for="Cargo" class="control-label"></label>
                <select asp-for="CargoId" class="form-control inputSelect" asp-items="ViewBag.CargoId"></select>
            </div>
            <div class="gerarSenhaStyle text-center">
                <a asp-action="GerarSenha" class="labelStyle text-white ml-3">Eu não possuo uma senha</a>
            </div>
            <div class="row mt-3">
                <div class="col-md-6 form-group text-center">
                    <a asp-action="EsqueciSenha" id="EsqueciSenha">Esqueci minha senha</a>
                </div>
                <div class="col-md-6 form-group text-center">
                    <input type="submit" value="Entrar" class="btn btn-info text-center" />
                </div>
            </div>
        </form>
    </div>
</body>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
