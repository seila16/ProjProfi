@model IEnumerable<AgendamentoProjeto.Models.Status>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Index";
    if (HttpContextAccessor.HttpContext.Session.GetString("Cargo") == "T.I")
    {
        Layout = "_Layout";
    }
    else
    {
        Layout = "_LayoutCoordenador";
    }
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeStatus)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StatusId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StatusId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.StatusId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
